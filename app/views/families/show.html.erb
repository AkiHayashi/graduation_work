<p>
  <strong>家族名</strong>
  <%= @family.name %>
</p>

<p>
  <strong>家族の写真</strong>
  <% @family.image? %>
  <%= image_tag @family.image.url ,size: '550x400' %>
</p>

<h2>わたしの家族</h2>
<% if @family.members.exists?%>
  <% @family.members.each do |member| %>
    <tr>
        <% if member.user.account.name? %>
          <td><%= member.user.account.name %></td>
        <% end %>
        <% if member.user.account.icon? %>
          <td><%= image_tag member.user.account.icon.url, size: '300x300'  %></td>
        <% end %>
    </tr><br>
  <% end %>
<% end %>
<br>
<br>
<br>
<h5>招待</h5>
<%= form_with model: :member, scope: :post, url: family_members_path(@family), local: true do |form| %>
  <%= text_field_tag :email, '', size:100, placeholder: "家族のメールアドレスを入力してください" %>
  <%= form.button :submit %>
<% end %>

<%= link_to '削除', family_path(@family), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to '編集', edit_family_path(@family) %> |
<%= link_to '戻る', families_path %>
