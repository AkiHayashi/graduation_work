<%= simple_form_for(@medical_history) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="field">
    <%= f.input :name %>
  </div>

  <div class="field">
    <%= f.input :start_on %>
  </div>

  <div class="field">
    <%= f.input :surgery %>
  </div>

  <div class="field">
    <%= f.input :surgery_on, include_blank: true %>
  </div>

  <h3>病院</h3>
  <div id="hospitals">
    <%= f.simple_fields_for :hospitals do |hospital| %>
      <%= render 'hospital_fields', f: hospital %>
    <% end %>
    <div id="links">
      <%= link_to_add_association '病院を追加する',f, :hospitals %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
