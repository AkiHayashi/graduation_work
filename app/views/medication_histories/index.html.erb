
<h1>服薬歴</h1>

<table>
  <thead>
    <tr>
      <th>薬品名</th>
      <th>服薬方法</th>
      <th>処方日</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medication_histories.each do |medication_history| %>
      <tr>
        <td><%= medication_history.name %></td>
        <td><%= medication_history.usage %></td>
        <td><%= medication_history.prescription_on %></td>
        <td><%= medication_history.note %></td>
        <td><%= link_to 'この服薬歴の詳細を見る', medication_history %></td>
        <td><%= link_to 'この服薬歴を編集する', edit_medication_history_path(medication_history) %></td>
        <td><%= link_to '削除', medication_history, method: :delete, data: { confirm: '本当に削除しますか' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

