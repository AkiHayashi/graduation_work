
<%= simple_form_for(@medication_history) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.select :usage, MedicationHistory.usages.keys.to_a, {} %>
    <%= f.input :prescription_on %>
    <%= f.input :note %>

<h1>かかりつけ薬局</h1>
    <%= f.simple_fields_for :pharmacies do |p| %>
      <%= p.input :name %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
