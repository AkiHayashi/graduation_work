<h1>Health Statuses</h1>

<h3>血圧（上）</h3>
<%= line_chart @systolic, colors: ["#b00", "#666"], xtitle: "日付", ytitle: "測定値", empty: "データがありません", discrete: true %>


<h3>血圧（下）</h3>
<%= line_chart @diastolic, xtitle: "日付", ytitle: "測定値", empty: "データがありません", discrete: true%>

<h3>脈拍</h3>
<%= line_chart @pulse, colors: ["#666"], xtitle: "日付", ytitle: "測定値", empty: "データがありません", discrete: true%>

<table>
  <thead>
    <tr>
      <th>Systolic</th>
      <th>Diastolic</th>
      <th>Pulse</th>
      <th>Condition</th>
      <th>測定日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @health_statuses.each do |health_status| %>
      <tr>
        <td><%= health_status.systolic %></td>
        <td><%= health_status.diastolic %></td>
        <td><%= health_status.pulse %></td>
        <td><%= health_status.condition %></td>
        <td><%= health_status.created_at %></td>
        <td><%= link_to 'Show', health_status %></td>
        <td><%= link_to 'Edit', edit_health_status_path(health_status) %></td>
        <td><%= link_to 'Destroy', health_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Health Status', new_health_status_path %>
