<h1>Diaries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.title %></td>
        <td><%= diary.content %></td>
        <% if diary.image? %>
        <td><%= image_tag diary.image.url, size: '400x300' %></td>
        <% end %>
        <td><%= link_to 'Show', diary %></td>
      <% if current_user.own?(diary) %>
        <td><%= link_to diary_path(diary), data: { confirm: 'Are you sure?'}, method: :delete do %>
          <%# <%= icon 'far', 'trash-alt' %>🚮<% end %></td>
        <td><%= link_to edit_diary_path(diary) do %>
          <%# <%= icon 'far', 'edit' %>✏️<% end %></td>
      <% else %>
          <td id="favorite_buttons_<%= diary.id %>">
          <%= render "favorites/favorites", diary: diary %>
          </td>
        </div>
      <% end %>
    </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Diary', new_diary_path %>
