<h1>Diaries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.title %></td>
        <td><%= diary.content %></td>
        <% if diary.image? %>
        <td><%= image_tag diary.image.url , size: '300x300' %></td>
        <% end %>
        <td><%= link_to 'Show', diary %></td>
      <% if current_user.own?(diary) %>
        <td><%= link_to diary_path(diary), data: { confirm: 'Are you sure?'}, method: :delete do %>
          <%# <%= icon 'far', 'trash-alt' %>ğŸš®<% end %></td>
        <td><%= link_to edit_diary_path(diary) do %>
          <%# <%= icon 'far', 'edit' %>âœï¸<% end %></td>
      <% else %>
        <% if current_user&.favorite?(diary) %>
          <td><%= link_to favorite_path(current_user.favorites.find_by(diary: diary)), method: :delete do %>
          <%# <%= icon 'fa', 'heart' %>â¤ï¸<% end %></td>
        <% else %>
          <td><%= link_to favorites_path(diary: diary), method: :diary do %>
          <%# <%= icon 'far', 'heart' %>ğŸ¤<% end %></td>
        <% end %>
      <% end %>
    </tr>
    <% end %>

  </tbody>
</table>

